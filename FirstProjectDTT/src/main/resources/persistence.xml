<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  	<persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
  	<provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.dtweb.model.Administrator</class>
    <class>com.dtweb.model.Brand</class>   
    <class>com.dtweb.model.Category</class>   
    <class>com.dtweb.model.CommentProduct</class>   
    <class>com.dtweb.model.ConfigSys</class>   
    <class>com.dtweb.model.Customer</class>   
    <class>com.dtweb.model.Menu</class>   
    <class>com.dtweb.model.Order</class>   
    <class>com.dtweb.model.OrderDetail</class>   
    <class>com.dtweb.model.Promotion</class>        
    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
    </properties>
  </persistence-unit>

</persistence>